extends ./sidebar.pug

block dashboardPage
    .row.mb-4
        .col-md-3
            #product-report(style="position : relative; padding : .5rem 1rem .5rem 1rem; background-color : white; color : #484848; border-radius : .5rem; height : 112px; box-shadow: rgb(44, 62, 80) -15px 0px 15px -15px inset;")
                h5(style="font-weight : 600; letter-spacing : 1px") Product Sales
                span(style="position : absolute; right : 30px; top : 25px")
                    i.fas.fa-coins(style="font-size : 50px; opacity : 0.5")
        .col-md-3
            #order-report(style="position : relative; padding : .5rem 1rem .5rem 1rem; background-color : white; color : #484848; border-radius : .5rem; height : 112px; box-shadow: rgb(44, 62, 80) -15px 0px 15px -15px inset;")
                h5(style="font-weight : 600; letter-spacing : 1px") Total Orders
                span(style="position : absolute; right : 30px; top : 25px")
                    i.fas.fa-shopping-cart(style="font-size : 50px; opacity : 0.5")
        .col-md-3
            #order-pending-report(style="position : relative; padding : .5rem 1rem .5rem 1rem; background-color : white; color : #484848; border-radius : .5rem; height : 112px; box-shadow: rgb(44, 62, 80) -15px 0px 15px -15px inset;")
                h5(style="font-weight : 600; letter-spacing : 1px") Pending Orders
                span(style="position : absolute; right : 30px; top : 25px")
                    i.fas.fa-shopping-cart(style="font-size : 50px; opacity : 0.5")
        .col-md-3
            #revenue-report(style="position : relative; padding : .5rem 1rem .5rem 1rem; background-color : white; color : #484848; border-radius : .5rem; height : 112px; box-shadow: rgb(44, 62, 80) -15px 0px 15px -15px inset;")
                h5(style="font-weight : 600; letter-spacing : 1px") Total Sales
                span(style="position : absolute; right : 30px; top : 25px")
                    i.fas.fa-coins(style="font-size : 50px; opacity : 0.5")
    .row.mb-4
        .col-md-6
            #current-sale(style="box-shadow: rgba(100, 100, 111, 0.2) 0px 7px 29px 0px; border : 3px solid black; border-radius : 1rem;")
                h4.mt-2(style="font-weight : 550; letter-spacing : 1.5px; margin-left : 10px;") Current Sales
                p(style="margin-bottom : unset; margin-left : 13px; transform : translateY(-10px)") Manage your current sale orders
        .col-md-6
            .order-chart(style="border : 4px solid rgb(44, 62, 80); border-radius : 1rem; overflow : hidden; height : 100%")
                h3.mb-1.mt-2(style="text-align : center; font-weight : 520; letter-spacing : 1.5px") Order Report
                #orderChart(style="max-width: 900px; width : 100%; height: 380px; padding : 0 .5rem 0 .5rem")
    .row.mb-3
        .col-md-6
            .product-chart(style="border : 4px solid rgb(44, 62, 80); border-radius : 1rem; overflow : hidden")
                h3.mb-1.mt-2(style="text-align : center; font-weight : 520; letter-spacing : 1.5px") Product Report
                #productChart(style="max-width: 900px; width : 100%; height: 380px; padding : 0 .5rem 0 .5rem")
